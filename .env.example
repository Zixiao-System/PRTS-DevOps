# PRTS DevOps Platform - Environment Variables

# App
APP_NAME=PRTS DevOps Platform
VERSION=0.1.0
DEBUG=true

# Security
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32

# Database
DATABASE_URL=postgresql+asyncpg://prts:prts_dev_password@localhost:5432/prts

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# APNs (iOS Push Notifications)
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_BUNDLE_ID=com.prts.devops
APNS_KEY_PATH=
APNS_USE_SANDBOX=true

# Firebase (Android Push Notifications)
FIREBASE_CREDENTIALS_PATH=
